{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/runtime.schema.json",
  "title": "ADP Runtime v0.2.0",
  "type": "object",
  "required": ["execution"],
  "properties": {
    "execution": {
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/definitions/backend"}
    }
  },
  "additionalProperties": false,
  "definitions": {
    "repo": {
      "type": "object",
      "properties": {
        "url": {"type": "string"},
        "path": {"type": "string"},
        "ref": {"type": "string"}
      },
      "additionalProperties": false
    },
    "healthcheck": {
      "type": "object",
      "properties": {
        "path": {"type": "string"},
        "command": {"type": "string"},
        "interval_seconds": {"type": "integer", "minimum": 1},
        "timeout_seconds": {"type": "integer", "minimum": 1}
      },
      "additionalProperties": false
    },
    "resources": {
      "type": "object",
      "properties": {
        "cpu": {"type": "string"},
        "memory": {"type": "string"},
        "gpu": {"type": "string"}
      },
      "additionalProperties": false
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": {"type": "string"},
        "destination": {"type": "string"}
      },
      "additionalProperties": false
    },
    "backend": {
      "type": "object",
      "required": ["id", "backend"],
      "properties": {
        "id": {"type": "string"},
        "backend": {
          "type": "string",
          "enum": ["docker", "wasm", "python", "typescript", "binary", "custom"]
        },
        "type": {"type": "string"},
        "repo": {"$ref": "#/definitions/repo"},
        "source": {
          "type": "object",
          "properties": {
            "mode": {"type": "string"},
            "repo": {"type": "string"},
            "path": {"type": "string"},
            "ref": {"type": "string"},
            "inline": {"type": "string"}
          },
          "additionalProperties": false
        },
        "inline_source": {"type": "string"},
        "entrypoint": {"type": ["string", "array"], "items": {"type": "string"}},
        "image": {"type": "string"},
        "module": {"type": "string"},
        "exported_functions": {"type": "array", "items": {"type": "string"}},
        "wasi": {"type": "boolean"},
        "memory": {
          "type": "object",
          "properties": {
            "max_mb": {"type": "integer"}
          },
          "additionalProperties": false
        },
        "command": {
          "type": "array",
          "items": {"type": "string"}
        },
        "ports": {
          "type": "array",
          "items": {"type": "string"}
        },
        "args": {
          "type": "array",
          "items": {"type": "string"}
        },
        "environment": {"type": "object", "additionalProperties": {"type": "string"}},
        "dependencies": {"type": "array", "items": {"type": "string"}},
        "package_manager": {"type": "string"},
        "build_cmd": {"type": "string"},
        "path": {"type": "string"},
        "endpoint": {"type": "string"},
        "env": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "resources": {"$ref": "#/definitions/resources"},
        "logging": {"$ref": "#/definitions/logging"},
        "healthcheck": {"$ref": "#/definitions/healthcheck"},
        "extensions": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  }
}
